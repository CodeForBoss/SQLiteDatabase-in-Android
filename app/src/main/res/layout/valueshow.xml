<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#212295"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:background="@drawable/myedittext"
            android:id="@+id/searchNameEt"
            android:textColor="#FFFFFF"
            android:gravity="center"
            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:background="@drawable/myedittext"
            android:id="@+id/searchAgeEt"
            android:textColor="#FFFFFF"
            android:gravity="center"
            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Phone: "
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:background="@drawable/myedittext"
            android:id="@+id/searchPhoneEt"
            android:textColor="#FFFFFF"
            android:gravity="center"
            ></EditText>
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_margin="10dp"
       android:weightSum="2"
       >
       <Button
           android:layout_weight="1"
           android:id="@+id/update"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:background="@drawable/mybtn"
           android:gravity="center"
           android:padding="10dp"
           android:text="Update"
           android:textAllCaps="false"
           android:textColor="#59F622"
           android:textSize="15dp"
           android:drawableLeft="@drawable/update"
           ></Button>

       <Button
           android:layout_weight="1"
           android:id="@+id/delete"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:background="@drawable/mybtn"
           android:gravity="center"
           android:padding="10dp"
           android:text="Delete"
           android:textAllCaps="false"
           android:textColor="#FB1B1B"
           android:drawableRight="@drawable/delete"
           android:textSize="15dp"></Button>
   </LinearLayout>

</LinearLayout>